<%- include('./layout/header.ejs')%>

<div class="container">
  <div class="row my-4">
    <div class="col-lg-12">
      <div class="table-responsive">
        <% if(success!=''){%>
        <div
          class="alert alert-success alert-dismissible fade show"
          role="alert"
        >
          <strong><%= success%></strong>
          <button
            type="button"
            class="btn-close"
            data-bs-dismiss="alert"
            aria-label="Close"
          ></button>
        </div>
        <%}%>
        <table class="table table-striped align-middle text-center">
          <thead>
            <tr class="table-dark">
              <th>Id</th>
              <th>Name</th>
              <th>Photo</th>
              <th>Phone</th>
              <th>Email</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            <% users.forEach((user,index)=>{%>
            <tr>
              <td><%= index +1%></td>
              <td><%= user.username%></td>
              <td>
                <img
                  src="/uploads/<%=user.photo%>"
                  alt="<%= user.username%>"
                  style="border-radius: 50%; height: 50px; width: 50px"
                />
              </td>
              <td><%= user.phone%></td>
              <td><%= user.email%></td>
              <td>
                <div class="container d-flex">
                  <a
                    href="/app/v1/persons/update/<%= user._id%>"
                    class="text-success"
                    ><i class="fas fa-edit fa-lg mx-1"></i
                  ></a>
                  <form
                    action="/app/v1/persons/delete/<%= user._id%>?_method=DELETE"
                    class="text-danger"
                    method="post"
                  >
                    <button
                      type="submit"
                      class="border-0 bg-transparent text-danger"
                    >
                      <i class="fas fa-trash fa-lg mx-1"></i>
                    </button>
                  </form>
                </div>
              </td>
            </tr>
            <%})%>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
<%- include('./layout/footer.ejs')%>
